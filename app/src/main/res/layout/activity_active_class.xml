<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActiveClassActivity">

    <TextView
        android:id="@+id/activeTitle1"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:text="@string/active_classes"
        android:textColor="#311B92"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="176dp"
        android:layout_height="75dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swipeButton"
        app:layout_constraintVertical_bias="0.863" />

    <TextView
        android:id="@+id/no_class"
        android:layout_width="232dp"
        android:layout_height="82dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/no_active_class_available"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.342" />

    <TextView
        android:id="@+id/class_label"
        android:layout_width="275dp"
        android:layout_height="171dp"
        android:gravity="center_vertical"
        android:text="IT150 -Lab "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activeTitle1"
        app:layout_constraintVertical_bias="0.233" />

    <Button
        android:id="@+id/authenticate"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="Enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swipeButton" />

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipeButton"
        android:layout_width="379dp"
        android:layout_height="82dp"
        android:layout_marginTop="48dp"
        app:button_background="@drawable/button_design"
        app:button_bottom_padding="15dp"
        app:button_image_disabled="@drawable/ic_baseline_lock_open_24"
        app:button_image_enabled="@drawable/ic_baseline_lock_open_24"
        app:button_left_padding="65dp"
        app:button_right_padding="15dp"
        app:button_top_padding="15dp"
        app:inner_text="Swipe to enter"
        app:inner_text_bottom_padding="15dp"
        app:inner_text_size="20dp"
        app:inner_text_top_padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/class_label"
        app:layout_constraintVertical_bias="0.255" />


</androidx.constraintlayout.widget.ConstraintLayout>